<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edtNewMaSach"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:gravity="center|left"
        android:hint="Mã sách"
        android:textSize="18sp" />
    <EditText
        android:layout_marginHorizontal="20dp"
        android:id="@+id/edtNewTenSach"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginVertical="20dp"
        android:gravity="center|left"
        android:hint="Tên sách"
        android:textSize="18sp" />
    <EditText
        android:layout_marginHorizontal="20dp"
        android:id="@+id/edtNewGiaThue"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginVertical="20dp"
        android:gravity="center|left"
        android:hint="Giá thuê"
        android:textSize="18sp" />
    <Spinner
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/spnLoaiSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/lnSaveSach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/login_button"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/baseline_save_24"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LƯU"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/lnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/login_button"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/baseline_cancel_24"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HUỶ"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>