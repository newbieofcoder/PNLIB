<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMaSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ma sach: 1"
            android:textColor="#727272"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ten sach: Java1"
            android:textColor="#727272"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvGiaThue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gia thue: 10000"
            android:textColor="#727272"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/tvLoaiSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Loai sach: CNTT"
            android:textColor="#727272"
            android:textSize="16sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgDeleteSach"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/baseline_delete_forever_24" />
</LinearLayout>